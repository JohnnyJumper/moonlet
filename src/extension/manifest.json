{
    "name": "Moonlet Wallet",
    "version": "0.2",
    "description": "Moonlet Wallet Extension",
    "permissions": ["storage"],
    "background": {
        "scripts": ["bundle.background.js"],
        "persistent": false
    },
    "icons": {
        "16": "assets/icon-16px.png",
        "48": "assets/icon-48px.png",
        "128": "assets/icon-128px.png"
    },
    "browser_action": {
        "default_popup": "index.html?popup=1"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*", "file://*/*"],
            "run_at": "document_end",
            "js": ["bundle.content-script.js"]
        }
    ],
    "web_accessible_resources": ["/bundle.web-inject.js"],
    "manifest_version": 2
}
